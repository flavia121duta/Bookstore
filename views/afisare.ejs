<!doctype html>
<html lang="ro">

<head>
    <meta charset="utf-8">
    <title>Recenzii</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="footerStyle.css">
    <script>
        function addImage(src) {
            let img = document.querySelector('img');
            img.src = src;
            let element = document.querySelector('photo');
            element.appendChild(img);
        }
    </script>

    <style>
    html {
            background-color: lightskyblue;
            width: 100%;
            height: 100%;
            padding: 2%;
    }

    h1 {
            color: #ff7472;
            font-style: italic;
            text-align: center;
    }

    h2 {
           text-align: center;
           color: #ff7472;
    }

    a {
        text-decoration: none;
    }

    div {
         background-color: lightblue;
         border: 2px solid black;
         width: 40%;
         text-align: justify;
         padding: 0.2em;
         margin-bottom: 5%;
    }

    .photo {
        width: 50%;
        overflow: hidden;
        flex: 1 0 auto;
        margin: 1em;
        text-align: center;
        background-color:rgb(127, 227, 255);
    }

    </style>
</head>

<body>
    <a href = "/">HOME</a>
    <br/> <br/>

    <h1>Recenzii până în prezent</h1>
    <br/> <br/>

    <% Object.keys(infoRecenzii).reverse().forEach(element =>{ %>
    <div>
        <h2>Titlu: <%=infoRecenzii[element].titlu%></h2>
        <p>Nota acordată: <%=infoRecenzii[element].numar%></p>
        <p>Email utilizator: <%=infoRecenzii[element].adresa%></p>
        <p>Opinie: <%=infoRecenzii[element].recomandare%></p>
        <p>Data achiziționării: <%=infoRecenzii[element].data%></p>
        <p>Recenzie: <%=infoRecenzii[element].recenzie%></p>
        <p><%- infoRecenzii[element].src%></p>
    </div>
    <% }) %>
</body>

</html>
